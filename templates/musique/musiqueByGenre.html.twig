{% extends 'base.html.twig' %}

{% block css %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('CSS/musiquebygenre.css')}}">
{% endblock %}

{% block title %}Musiques {{genre.nom}}
{% endblock %}

{% block body %}

	<div class="main">
		<div class="haut">
			<div class="choix">
				<select class="trier">
					<option selected>Trier Par</option>
					<option value="2">Musique A-Z</option>
					<option value="3">Musique Z-A</option>
				</select>
			</div>
			<div class="titre">
				<h2>
					Musiques {{genre.nom}}
				</h2>

			</div>
		</div>
		<div class="wrap">
			{% for musique in genre.musiques %}
				{% if musique.moderation == true %}
					<figure>
						<a href="{{path('app_oneMusique', {id:musique.id})}}">
							<img src="{{asset('photo/musique/' ~ musique.photo)}}" alt="{{musique.nom}}" width='120' height="120">
							<figcaption>
								{{musique.nom}} - {{musique.titre}}
							</figcaption>
						</a>
					</figure>
				{% endif %}
			{% endfor %}

		</div>
	</div>


{% endblock body %}
