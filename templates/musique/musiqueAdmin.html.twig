{% extends 'base.html.twig' %}

{% block title %}Les musiques{% endblock %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" href="{{asset('CSS/admin.css')}}">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

{% endblock %}

{% block body %}

  <h1 >Listes des musiques </h1>
  <br>
  <table >
      <tr>
        <th scope="col" >Photo </th>
        <th scope="col">Titre </th>
        <th scope="col">Morceau</th>
        <th scope="col">Genre</th>
        <th scope="col">Supprimer</th>
      </tr>
      {% for musique in musique %}
      <tr >
        <td><img src="{{asset('photo/musique/' ~ musique.photo)}}" alt="{{musique.photo}}" width="50"></td>
        <td>{{musique.titre}}</td>
        <td> <audio controls src="{{asset('fichier/musique/' ~ musique.fichier)}} "></audio></td>
        <td> {{musique.genre.nom}}</td>
        <td><a href="{{path('app_deleteAdmin_musique', {id: musique.id})}}" onClick="return confirm('Ãªtes-vous sur de vouloir supprimer?')"><i class="fa fa-trash" style="font-size:36px; color:black" ></i></a></td>
      </tr>
      {% endfor %}
      <td></td>
      <td></td>
      <td>{{knp_pagination_render(pagination)}}</td>
  </table>

{% endblock %}
