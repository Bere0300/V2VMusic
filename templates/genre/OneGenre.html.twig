{% extends "base.html.twig" %}
{% block css %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('CSS/menuMusic.css')}}">
{% endblock %}

{% block title %}
	{{genre.nom}}
{% endblock %}

{% block body %}

	<div class='main'>
		<div class='texte'>
			<h2>Nos Artistes
				{{genre.nom |upper}}</h2>
			<a href="{{path('app_artiste_genre', {id: genre.id})}}">Voir plus</a>
		</div>
		<div class="rap">
			{% for artiste in artistes %}
				{% if artiste.profil == 1 %}
					<a href="{{path('app_view_profil', {id: artiste.id})}}">
						<figure>
							{% if artiste.photo == 'profil.png' %}
								<img src="{{asset('img/profil.png')}}" alt="photo" width="120" height="120">
								{% else %}"
								<img src="{{asset('photo/profil/' ~ artiste.photo)}}" alt="{{artiste.photo}}" width="120" height="120">
							{% endif %}
							<figcaption>{{artiste.pseudo}}</figcaption>
						</figure>
					</a>
				{% endif %}
			{% endfor %}
		</div>

		<div class='texte'>
			<h2>Nos Musiques
				{{genre.nom |upper}}</h2>
			<a href="{{path('app_musique_genre', {id: genre.id})}}">Voir plus</a>
		</div>
		<div class="rap">
			{% for musique in musiques %}
				<figure>
					<a href="{{path('app_oneMusique', {id: musique.id})}}">
						<img src="{{asset('photo/musique/' ~ musique.photo)}}" alt="{{musique.nom}}" width='120' height="120">
						<figcaption>
							{{musique.nom}}
							-{{musique.titre}}</figcaption>
					</a>
				</figure>
			{% endfor %}
		</div>
	</div>
{% endblock %}
