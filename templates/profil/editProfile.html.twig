{% extends 'base.html.twig' %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" href="{{asset('CSS/form.css')}}">
{% endblock %}

{% block title %}Modification du profil{% endblock %}

{% block body %}

    <div class='main'>

            {{ form_start(formProfil) }}
                <h1>Modifier le profil</h1>
                    {{ form_row(formProfil.photo) }}
                    {{ form_row(formProfil.nom) }}
                    {{ form_row(formProfil.prenom) }}
                    {{ form_row(formProfil.pseudo) }}
                    {{ form_row(formProfil.biographie) }}

                <button type="submit" class="button">Valider</button>
            {{ form_end(formProfil) }}
    </div>



{% endblock %}